<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - @Resources.NDTranslations.downwind</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink(@Resources.NDTranslations.downwind, "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink(@Resources.NDTranslations.home, "Index", "Home")</li>
                    <li>@Html.ActionLink(@Resources.NDTranslations.members, "Index", "NDMember")</li>
                    <li>@Html.ActionLink(@Resources.NDTranslations.languages, "ChangeLanguage", "NDLanguage")</li>
                    
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div style="font-weight: bold; color:red">@TempData["message"]</div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>
                &copy; @DateTime.Now.Year - <a href="mailto:Ndahlquist@conestogac.on.ca">Nicole Dahlquist - Section 3</a>
                <ul class="nav navbar-nav" style="float:right">
                    <li>@Html.ActionLink(@Resources.NDTranslations.about, "About", "Home")</li>
                    <li>@Html.ActionLink(@Resources.NDTranslations.contact, "Contact", "Home")</li>
                </ul>
            </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
